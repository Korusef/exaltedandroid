<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anathema.android.manse.ManseFragment">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="start|top">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" android:layout_below="@+id/text_name">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_detail"/>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
