<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" android:id="@+id/exaltedrandom">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.name"
            android:id="@+id/button_name" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.fashion"
            android:id="@+id/button_fashion"
            android:layout_toEndOf="@+id/button_name"
            android:onClick="generateLooks"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.lifepath"
            android:id="@+id/button_lifepath"
            android:layout_toEndOf="@+id/button_fashion"
            android:layout_alignEnd="@+id/button_vision"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.village"
            android:id="@+id/button_village"
            android:layout_below="@+id/button_fashion" android:layout_toStartOf="@+id/button_fashion"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.manse"
            android:id="@+id/button_manse"
            android:layout_toEndOf="@+id/button_village"
            android:layout_below="@+id/button_fashion" android:layout_alignStart="@+id/button_fashion"
            android:onClick="generateManse"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button.vision"
            android:id="@+id/button_vision"
            android:layout_alignTop="@+id/button_manse" android:layout_toEndOf="@+id/button_manse"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/fragment_container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" android:layout_below="@+id/button_village"/>
</RelativeLayout>
